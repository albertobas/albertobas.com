{
  "name": "albertobas.com",
  "version": "1.0.0",
  "private": true,
  "license": "Apache-2.0",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "post-build": "NODE_OPTIONS='--experimental-json-modules' node ./scripts/generate-rss.mjs && node ./scripts/generate-sitemap.mjs",
    "start": "next start",
    "lint": "next lint && stylelint-config-prettier-check",
    "type-check": "tsc --pretty --noEmit",
    "format": "prettier --write .",
    "extract-languages": "formatjs extract 'src/pages/**/*.ts*' './src/components/**/*.ts*' --out-file lang/en.json --id-interpolation-pattern '[sha512:contenthash:base64:6]'",
    "compile-languages": "formatjs compile-folder lang compiled-lang"
  },
  "dependencies": {
    "@tippyjs/react": "^4.2.6",
    "date-fns": "^2.28.0",
    "esbuild": "^0.14.23",
    "gray-matter": "^4.0.3",
    "mdx-bundler": "^8.0.1",
    "next": "^12.1.0",
    "next-seo": "^5.1.0",
    "preact": "^10.6.6",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-icons": "^4.3.1",
    "react-image-lightbox": "^5.1.4",
    "react-intersection-observer": "^8.33.1",
    "react-intl": "^5.24.6",
    "react-select": "^5.2.2",
    "sharp": "^0.30.1"
  },
  "devDependencies": {
    "@formatjs/cli": "^4.8.2",
    "@types/github-slugger": "^1.3.0",
    "@types/node": "17.0.21",
    "@types/react": "17.0.39",
    "eslint": "8.10.0",
    "eslint-config-next": "12.1.0",
    "github-slugger": "^1.4.0",
    "globby": "^13.1.1",
    "postcss": "^8.4.7",
    "postcss-custom-media": "^8.0.0",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-mixins": "^9.0.2",
    "postcss-nested": "^5.0.6",
    "postcss-preset-env": "^7.4.1",
    "postcss-simple-vars": "^6.0.3",
    "prettier": "^2.5.1",
    "reading-time": "^1.5.0",
    "rehype-autolink-headings": "^6.1.1",
    "rehype-code-titles": "^1.0.3",
    "rehype-prism-plus": "^1.3.2",
    "rehype-slug": "^5.0.1",
    "rss": "^1.2.2",
    "stylelint": "^14.5.3",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recommended": "^7.0.0",
    "typescript": "4.6.2"
  },
  "eslintConfig": {
    "extends": "next/core-web-vitals",
    "rules": {
      "react/prop-types": 0,
      "react/no-unescaped-entities": 0
    }
  },
  "prettier": {
    "useTabs": false,
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "bracketSpacing": true,
    "printWidth": 120,
    "overrides": [
      {
        "files": "*.mdx",
        "options": {
          "printWidth": 1000
        }
      }
    ]
  }
}
